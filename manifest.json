{
    "manifest_version": 3,
    "name": "Pitch Perfect",
    "version": "1.0",
    "description": "Generate AI-powered cover letters directly from your browser.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": ["downloads"]
  }